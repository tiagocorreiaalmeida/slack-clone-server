{
  "name": "code-join-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "env-cmd node dist/index",
    "dev": "env-cmd ts-node-dev --respawn src/index",
    "test": "env-cmd jest --forceExit",
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "commit": "npx git-cz",
    "precommit": "lint-staged && tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tiagocorreiaalmeida/CodeJoin.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tiagocorreiaalmeida/CodeJoin/issues"
  },
  "homepage": "https://github.com/tiagocorreiaalmeida/CodeJoin#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/jest": "^26.0.0",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "commitizen": "^4.1.2",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.9",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "@types/uuid": "^8.0.0",
    "env-cmd": "^10.1.0",
    "env-var": "^6.1.1",
    "reflect-metadata": "^0.1.13",
    "uuid": "^8.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.ts": "npm run lint"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
