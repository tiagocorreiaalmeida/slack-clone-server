{
  "name": "slack-clone-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "env-cmd node dist/index",
    "dev": "env-cmd ts-node-dev --respawn src/index",
    "test": "env-cmd jest",
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "commit": "npx git-cz",
    "precommit": "lint-staged && tsc",
    "generate:graphql": "env-cmd npx graphql-codegen"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tiagocorreiaalmeida/slack-clone-server.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tiagocorreiaalmeida/slack-clone-server/issues"
  },
  "homepage": "https://github.com/tiagocorreiaalmeida/slack-clone-server#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@graphql-codegen/cli": "^1.17.8",
    "@graphql-codegen/typescript": "^1.17.9",
    "@graphql-codegen/typescript-resolvers": "^1.17.9",
    "@types/cookie-parser": "^1.4.2",
    "@types/jest": "^26.0.0",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "commitizen": "^4.1.2",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.9",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/faker": "^4.1.12",
    "@types/joi": "^14.3.4",
    "@types/uuid": "^8.0.0",
    "@types/validator": "^13.1.0",
    "apollo-server-express": "^2.16.1",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.5",
    "env-cmd": "^10.1.0",
    "env-var": "^6.1.1",
    "express": "^4.17.1",
    "faker": "^4.1.0",
    "graphql": "^15.3.0",
    "graphql-modules": "^1.0.0-alpha.1",
    "joi": "^17.2.0",
    "pg": "^8.3.0",
    "pg-hstore": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.3.4",
    "sequelize-cli": "^6.2.0",
    "subscriptions-transport-ws": "^0.9.18",
    "uuid": "^8.1.0",
    "validator": "^13.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.ts": "npm run lint"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
